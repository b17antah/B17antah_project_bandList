<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.b17antah.b17antah_project_bandlist.AboutTheApp">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/holo_red_dark"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_about_the_app"
        android:id="@+id/include" />

    <TextView
        android:id="@+id/informationtext_ATA_Header"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_gravity="bottom|right"
        android:textSize="26sp"
        android:textAlignment="center"
        android:text="Welcome to BandCheck!"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="top|left" />

    <TextView
        android:id="@+id/informationtext_ATA_Body"
        android:layout_width="match_parent"
        android:layout_height="415dp"
        android:layout_gravity="bottom|right"
        android:paddingLeft="5dp"
        android:text="This app was made with the intention make it easier for metalfans to discover and recommend bands to other fans." />

    <TextView
        android:id="@+id/informationtext_ATA_Footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:paddingLeft="5dp"
        android:text="made with android studio 2.3.3" />

    <TextView
        android:id="@+id/informationtext_ATA_Body2"
        android:layout_width="match_parent"
        android:layout_height="337dp"
        android:layout_gravity="bottom|right"
        android:paddingLeft="5dp"
        android:text="For more information you may contact us at: b17antah@student.his.se" />

</android.support.design.widget.CoordinatorLayout>
